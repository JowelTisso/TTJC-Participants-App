<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ParticipantsDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:baselineAligned="false">
        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:hint="search"
            android:lines="1"
            android:maxLines="1"
            android:focusable="auto"
            android:inputType="text"
            android:elevation="2dp"
            android:fontFamily="@font/caviardreams"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:background="@android:color/white"
            android:iconifiedByDefault="false"
            android:autofillHints=""
            android:paddingStart="10dp" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="2dp"
            android:fontFamily="@font/caviardreams_bold"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="18dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Total : "
        android:gravity="bottom"
        android:textSize="15sp"
        android:paddingBottom="2dp"
        />
    <TextView
        android:id="@+id/listCount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginLeft="5dp"
        android:text="List Count"
        android:fontFamily="@font/caviardreams_bold"
        android:textSize="20sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btnNotePopup"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/caviardreams_bold"
        android:text="Note"
        android:textSize="16sp"
        android:elevation="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_background_inside"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progressBarP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:elevation="5dp"
        android:translationZ="5dp"
        />
    </RelativeLayout>
</LinearLayout>