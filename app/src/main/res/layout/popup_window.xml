<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Note:"
        android:textColor="@android:color/white"
        android:textSize="21sp"
        android:layout_weight="1.1"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:background="@color/colorAccent"
        />
    <TextView
        android:id="@+id/notetext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:layout_weight="3"
        android:background="@android:color/white"
        android:fontFamily="@font/caviardreams_bold"
        android:text="\nThe blue twitter icon/empty profile pictures in the list is because the users has not provided their twitter link, or has not provided in a proper format which is \n[Twitter](https://twitter.com/joweltisso)\n"

         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="**Images are fetched from twitter, so please provide proper twitter link in your PR if possible and notify."
        android:textSize="14sp"
        android:padding="10dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:background="@android:color/white"
        android:fontFamily="@font/caviardreams_bold"
        />

</LinearLayout>