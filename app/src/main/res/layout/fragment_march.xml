                    android:text="28"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/marchCB17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="29"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/marchCB18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/marchCB19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31"
                    android:textSize="12sp" />

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                />
        </TableLayout>
    </LinearLayout>
</LinearLayout>
